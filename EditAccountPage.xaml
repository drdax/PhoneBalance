<Page x:Class="DrDax.PhoneBalance.EditAccountPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Margin="10">
		<TextBlock Text="Tālruņa maiņa" FontSize="{StaticResource TextStyleExtraLargeFontSize}" x:Uid="EditCaption"/>
		<TextBox x:Name="captionBox" Header="Attēlojamais nosaukums" x:Uid="Caption"/>
		<ComboBox x:Name="intervalBox" Header="Atlikuma noskaidrošanas biežums" DisplayMemberPath="Item1" SelectedValuePath="Item2" x:Uid="Interval"/>
	</StackPanel>
	<Page.BottomAppBar>
		<CommandBar>
			<AppBarButton Icon="Save" Label="Saglabāt" Click="Save_Click" x:Uid="Save"/>
			<AppBarButton Icon="Cancel" Label="Atcelt" Click="Cancel_Click" x:Uid="Cancel"/>
		</CommandBar>
	</Page.BottomAppBar>
</Page>